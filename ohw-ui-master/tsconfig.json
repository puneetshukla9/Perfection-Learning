{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": false,
		"module": "commonjs",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"removeComments": false,
		"noImplicitAny": false,
		"suppressImplicitAnyIndexErrors": true
  },
  "filesGlob": [
    "./typings/**/*.ts",
    "./app/**/*.ts",
    "./shared*/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
